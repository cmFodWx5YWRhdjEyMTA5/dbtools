<!DOCTYPE html>
<html>
	<head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
        <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.png">
        <title>Project - HRMS admin template</title>
		<%include ../common/head%>
    </head>
    <body>
        <div class="main-wrapper">
            <%include ../common/header%>
			<%include ../common/side-menu%>
            <div class="page-wrapper">
                <div class="content container-fluid">
					<div class="row">					
						<div class="col-xs-4"><h4 class="page-title">Create Project</h4></div>
						<div class="col-xs-8 text-right m-b-30">&nbsp;</div>
					</div>

					<div class="row filter-row" align="center">
						<div class="col-sm-12 col-xs-12">
							<p>
								<%=(error) ? `<p style="color:red;">${JSON.stringify(error)}</p>` : "" ;%>
								<%=(message) ? `<p style="color:red;">${JSON.stringify(message)}</p>` : "" ;%>
								<%=(validator.length !== 0) ? `<p style="color:red;">${JSON.stringify(validator)}</p>` : "" ;%>
								<%var flashMgs = getMessages();%>
								<%=(Object.keys(flashMgs).length !== 0) ? `${flashMgs.error}` : "" ;%>
							</p>
						</div>
                    </div>

					<div id="add-project-container" class="row">						
						<div class="col-lg-12 col-sm-12">							
							<div class="card-box project-box">								
								<form action="/projects" method="post" enctype="multipart/form-data">
									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												<label>Project Name</label>
												<input class="form-control" placeholder="Enter project name" type="text" name="pname" required>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label>Client</label>
												<select class="select" name="client" required>
													<option>Global Technologies</option>
													<option>Delta Infotech</option>
												</select>
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												<label>Start Date</label>
												<div class="cal-icon"><input class="form-control datetimepicker" type="text" name="start_date" required></div>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label>End Date</label>
												<div class="cal-icon"><input class="form-control datetimepicker" type="text" name="end_date" required></div>
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-3">
											<div class="form-group">
												<label>Rate</label>
												<input placeholder="$50" class="form-control" type="text" name="rate_price" required>
											</div>
										</div>
										<div class="col-md-3">
											<div class="form-group">
												<label>&nbsp;</label>
												<select class="select" name="rate_duration" required>
													<option>Hourly</option>
													<option>Fixed</option>
												</select>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label>Priority</label>
												<select class="select" name="priority" required>
													<option>High</option>
													<option>Medium</option>
													<option>Low</option>
												</select>
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												<label>Add Project Leader</label>
												<input class="form-control" type="text"  name="p_leader" required>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label>Team Leader</label>
												<div class="project-members">
													<a href="#" data-toggle="tooltip" title="Jeffery Lalor">
														<img src="assets/img/user.jpg" class="avatar" alt="Jeffery Lalor" height="20" width="20">
													</a>
												</div>
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												<label>Add Team</label>
												<input class="form-control" type="text"  name="p_team" required>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label>Team Members</label>
												<div class="project-members">
													<a href="#" data-toggle="tooltip" title="John Doe">
														<img src="assets/img/user.jpg" class="avatar" alt="John Doe" height="20" width="20">
													</a>
													<a href="#" data-toggle="tooltip" title="Richard Miles">
														<img src="assets/img/user.jpg" class="avatar" alt="Richard Miles" height="20" width="20">
													</a>
													<a href="#" data-toggle="tooltip" title="John Smith">
														<img src="assets/img/user.jpg" class="avatar" alt="John Smith" height="20" width="20">
													</a>
													<a href="#" data-toggle="tooltip" title="Mike Litorus">
														<img src="assets/img/user.jpg" class="avatar" alt="Mike Litorus" height="20" width="20">
													</a>
													<span class="all-team">+2</span>
												</div>
											</div>
										</div>
									</div>
									<div class="form-group">
										<label>Description</label>
										<textarea rows="4" cols="5" class="form-control summernote" placeholder="Enter your message here"  name="p_desc" required></textarea>
									</div>
									<div class="form-group">
										<label>Upload Files</label>
										<input class="form-control" type="file"  name="p_files">
									</div>
									<div class="m-t-20 text-center"><button type="submit" class="btn btn-primary">Create Project</button></div>
								</form>
							</div>
						</div>
					</div>

                </div>
				<% include ../common/side-chat %>
            </div>			
			<%include ../modals/delete-project-modal%>
        </div>
		<div class="sidebar-overlay" data-reff="#sidebar"></div>
        <%include ../common/scripts%>
        <script>
		$(document).ready(function(){
			$('.summernote').summernote({
				height: 200,
				minHeight: null,
				maxHeight: null,
				focus: false
			});
		});
        </script>
    </body>
</html>